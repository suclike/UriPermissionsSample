<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/magazine_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:clickable="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#E5B6E2"
        tools:showIn="@layout/recycleview_layout"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="2dp"
        card_view:cardMaxElevation="2dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardCornerRadius="2dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/result_uri_imageview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    tools:src="@color/colorAccent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"/>

            <View android:layout_width="1dp"
                  android:layout_height="match_parent"
                  android:background="#DC6259"/>

            <ImageView
                    android:id="@+id/result_string_imageview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    tools:src="@color/colorAccent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"/>

        </LinearLayout>

        <TextView
                android:id="@+id/result_title_textview"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textStyle="normal"
                android:background="#66A8A3"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

    </LinearLayout>

</android.support.v7.widget.CardView>